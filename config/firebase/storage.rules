rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos - users can upload their own
    // SECURITY: File type and size validation to prevent malicious uploads
    match /profile-photos/{userId} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/(jpeg|jpg|png|gif|webp)');
    }
    
    // Default deny all other paths
    // SECURITY: Default to deny reads to prevent unauthorized access to unknown paths
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
