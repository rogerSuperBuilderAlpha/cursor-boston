rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos - users can upload their own
    match /profile-photos/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
