rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Talk submissions - authenticated users can create, only owners can read/update/delete
    match /talkSubmissions/{submissionId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Event requests - authenticated users can create, only owners can read/update/delete
    match /eventRequests/{requestId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Mail collection - authenticated users can create (for email notifications)
    match /mail/{mailId} {
      allow create: if request.auth != null;
    }
    
    // Users collection - users can read/write their own data
    // Anyone can read public profiles, users can read their own full profile
    match /users/{userId} {
      allow read: if resource.data.visibility.isPublic == true 
                  || (request.auth != null && request.auth.uid == userId);
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Email lookup collection - maps emails to user UIDs for multi-email login
    // Public read access needed for login resolution, only server-side writes
    match /emailLookup/{email} {
      allow read: if true;
      allow write: if false; // Only server-side writes via Admin SDK
    }
    
    // Email verifications - server-side only for security
    match /emailVerifications/{tokenId} {
      allow read, write: if false; // Only server-side operations via Admin SDK
    }
    
    // Event registrations - users can create and read their own registrations
    match /eventRegistrations/{registrationId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Community messages - anyone can read, authenticated users can create, only owners can delete
    match /communityMessages/{messageId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
      // No client-side updates (counters updated via server)
      allow update: if false;
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
    
    // Message reactions - read-only for authenticated clients
    match /messageReactions/{reactionId} {
      allow read: if request.auth != null;
      allow create, delete, update: if false;
    }
    
    // Pull requests - read-only for authenticated users, server-side writes only
    match /pullRequests/{prId} {
      allow read: if request.auth != null;
      allow write: if false; // Only server-side writes via webhook
    }

    // Hackathons - pool: user can create/delete own doc; anyone authenticated can read pool for listing
    match /hackathonPool/{docId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Hackathons - teams: create if auth; read if member or auth (for pool/invite flows); update/delete if auth in memberIds
    match /hackathonTeams/{teamId} {
      allow create: if request.auth != null && request.auth.uid in request.resource.data.memberIds;
      allow read: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid in resource.data.memberIds;
    }

    // Hackathons - invites: create by fromUserId; read by toUserId or team members; update (accept/decline) by toUserId
    match /hackathonInvites/{inviteId} {
      allow create: if request.auth != null && request.resource.data.fromUserId == request.auth.uid;
      allow read: if request.auth != null && (
        resource.data.toUserId == request.auth.uid
        || (get(/databases/$(database)/documents/hackathonTeams/$(resource.data.teamId)).data != null
            && request.auth.uid in get(/databases/$(database)/documents/hackathonTeams/$(resource.data.teamId)).data.memberIds)
      );
      allow update: if request.auth != null && resource.data.toUserId == request.auth.uid;
      allow delete: if request.auth != null && (resource.data.fromUserId == request.auth.uid || resource.data.toUserId == request.auth.uid);
    }

    // Hackathons - join requests: create by fromUserId; read by team members or requester; update/delete by team member (accept/decline) or requester (withdraw)
    match /hackathonJoinRequests/{requestId} {
      allow create: if request.auth != null && request.resource.data.fromUserId == request.auth.uid;
      allow read: if request.auth != null && (
        resource.data.fromUserId == request.auth.uid
        || (get(/databases/$(database)/documents/hackathonTeams/$(resource.data.teamId)).data != null
            && request.auth.uid in get(/databases/$(database)/documents/hackathonTeams/$(resource.data.teamId)).data.memberIds)
      );
      allow update, delete: if request.auth != null && (
        resource.data.fromUserId == request.auth.uid
        || (get(/databases/$(database)/documents/hackathonTeams/$(resource.data.teamId)).data != null
            && request.auth.uid in get(/databases/$(database)/documents/hackathonTeams/$(resource.data.teamId)).data.memberIds)
      );
    }

    // Hackathons - submissions: create/update by team member; read by authenticated
    match /hackathonSubmissions/{submissionId} {
      allow create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/hackathonTeams/$(request.resource.data.teamId)).data.memberIds;
      allow read: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/hackathonTeams/$(resource.data.teamId)).data.memberIds;
      allow delete: if false;
    }

    // Hackathons - left-team lockout: user can create own doc when leaving; read by authenticated (for eligibility check)
    match /hackathonLeftTeam/{docId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null;
      allow update, delete: if false;
    }
  }
}
