{
  "name": "cursor-boston",
  "version": "0.1.0",
  "description": "A modern community platform for Cursor users in the Boston area. Built with Next.js, TypeScript, and Firebase.",
  "license": "GPL-3.0",
  "homepage": "https://github.com/rogerSuperBuilderAlpha/cursor-boston#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rogerSuperBuilderAlpha/cursor-boston.git"
  },
  "bugs": {
    "url": "https://github.com/rogerSuperBuilderAlpha/cursor-boston/issues"
  },
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "cursor",
    "boston",
    "community",
    "nextjs",
    "next.js",
    "firebase",
    "typescript",
    "react",
    "tailwindcss",
    "community-platform",
    "meetup",
    "events",
    "blog",
    "authentication",
    "firestore"
  ],
  "scripts": {
    "dev": "next dev --webpack -H localhost",
    "dev:turbo": "next dev -H localhost",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "jest --config config/jest.config.js",
    "test:watch": "jest --watch --config config/jest.config.js",
    "test:coverage": "jest --coverage --config config/jest.config.js",
    "validate-env": "tsx scripts/validate-env.ts",
    "seed-hackathon-teams": "tsx scripts/seed-hackathon-teams.ts",
    "check-members-db": "tsx scripts/check-members-db.ts",
    "prebuild": "npm run validate-env",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.2.1",
    "firebase": "^12.9.0",
    "firebase-admin": "^13.6.1",
    "gray-matter": "^4.0.3",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.575.0",
    "next": "^16.1.6",
    "next-themes": "^0.4.6",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^5.0.0",
    "react-leaflet-cluster": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.2",
    "@eslint/eslintrc": "^3.3.3",
    "@next/eslint-plugin-next": "^16.1.6",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^25.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^10.0.1",
    "eslint-config-next": "^16.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^4.2.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.56.0"
  },
  "overrides": {
    "eslint-plugin-import": { "eslint": "$eslint" },
    "eslint-plugin-jsx-a11y": { "eslint": "$eslint" },
    "eslint-plugin-react": { "eslint": "$eslint" },
    "eslint-plugin-react-hooks": { "eslint": "$eslint" },
    "typescript-eslint": { "eslint": "$eslint" },
    "@typescript-eslint/eslint-plugin": { "eslint": "$eslint" },
    "@typescript-eslint/parser": { "eslint": "$eslint" },
    "@typescript-eslint/utils": { "eslint": "$eslint" },
    "@typescript-eslint/type-utils": { "eslint": "$eslint" },
    "react-leaflet": { "react": "$react", "react-dom": "$react-dom" },
    "@react-leaflet/core": { "react": "$react", "react-dom": "$react-dom" },
    "react-leaflet-cluster": { "react": "$react", "react-dom": "$react-dom" }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "bash -c 'tsc --noEmit'"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ]
  }
}
